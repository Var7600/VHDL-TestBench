[flake8]
ignore =
	# missing whitespace after keyword
	E275,
	# line too long ( n > 79 characters)
	E501,
	# whitespace before ')'
	E202
exlude =
	# No need to traverse out git directory
	.git,
	# There's no value in checking cache directories
	__pycache__,
	# the config file is mostly autogenerated,ignore it
	docs/source/conf.py


